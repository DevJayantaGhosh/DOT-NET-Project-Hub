@model InventoryApp.DTO.ProductRequestDTO;
@{
    ViewData["Title"] = "SaveProd";
}

<h1>SaveProd</h1>




<section>
    <div class="container py-4">
        <div class="row">
            <div class="col-lg-7 mx-auto d-flex justify-content-center flex-column">
                <h3 class="text-center">Contact us</h3>
                <form role="form" id="contact-form" method="post" autocomplete="off">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="input-group input-group-dynamic mb-4">
                                    <label class="form-label" asp-for="Product.ProdName"></label>
                                    <input class="form-control" asp-for="Product.ProdName" type="text">
                                    <span asp-validation-for="Product.ProdName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="input-group input-group-dynamic mb-4">
                                    <label class="form-label" asp-for="Product.ProdPrice"></label>
                                    <input class="form-control" asp-for="Product.ProdPrice" type="text">
                                    <span asp-validation-for="Product.ProdPrice" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="input-group input-group-dynamic mb-4">
                                    <label class="form-label" asp-for="Product.CategoryRefNo"></label>
                                   <select asp-for="Product.CategoryRefNo" class="form-control" asp-items="@ViewBag.DropdownData">

                                    </select>
                                    <span asp-validation-for="Product.RefCategory" class="text-danger"></span>
                                </div>
                            </div>



                            <div class="col-md-12">
                                <button type="submit" class="btn bg-gradient-dark w-100">Save Product</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>