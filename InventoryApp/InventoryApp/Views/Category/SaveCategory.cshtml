@model InventoryApp.DTO.CategoryRequestDTO;
@{
    ViewData["Title"] = "SaveCategory";
}



<div class="container-fluid mt-5">

 



    <section>
        <div class="container py-4">
            <div class="row">
                <div class="col-lg-7 mx-auto d-flex justify-content-center flex-column">
                    <h3 class="text-center">Save Category</h3>
                    <form role="form" id="contact-form" method="POST" asp-action="SaveCategory" autocomplete="off">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="input-group input-group-dynamic mb-4">
                                       
                                        <input class="form-control"  asp-for="CategoryName" aria-label="First Name..." type="text" placeholder="Enter Category Name">
                                        <span asp-validation-for="CategoryName"></span>
                                    </div>
                                </div>
                              
                            </div>
                           
                                <div class="col-md-12">
                                    <button type="submit" class="btn bg-gradient-dark w-100">Save</button>
                                </div>
                            </div>
                       
                    </form>
                </div>
            </div>
        </div>
    </section>

</div>


